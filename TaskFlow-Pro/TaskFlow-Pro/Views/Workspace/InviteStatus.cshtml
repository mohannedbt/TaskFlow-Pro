@model TaskFlow_Pro.Controllers.InviteStatusVm
@{
    ViewData["Title"] = "Invite Status";
}

<div class="container py-5">
    <div class="card p-4 rounded-4 shadow-sm">
        <h4 class="fw-bold">@((Model.Ok) ? "Invite Valid ✅" : "Invite Invalid ❌")</h4>
        <p class="text-muted">@Model.Message</p>

        @if (Model.Ok)
        {
            <p class="mb-1"><strong>Workspace:</strong> @Model.WorkspaceName</p>
            <p><strong>Role:</strong> @Model.RoleToGrant</p>
        }
    </div>
</div>