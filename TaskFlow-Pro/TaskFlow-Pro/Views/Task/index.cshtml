@model TaskFlow_Pro.Models.TaskViewModel
@using TaskFlow_Pro.Models

@{
ViewData["Title"] = "Task Board";

int currentPage = ViewBag.CurrentPage ?? 1;
int totalPages  = ViewBag.TotalPages ?? 1;
string? q       = ViewBag.SearchQuery;
State? state    = ViewBag.State;
}

<!-- ================= HEADER ================= -->
<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="fw-bold mb-0">TaskFlow Pro</h3>
        <p class="text-muted small mb-0">Project Management Dashboard</p>
    </div>

    <div class="dropdown">
        <button class="btn bg-white border rounded-pill px-3 py-2 d-flex align-items-center gap-2"
                data-bs-toggle="dropdown">
            <span class="fw-semibold small">@User.Identity?.Name</span>
            <img src="https://ui-avatars.com/api/?name=@User.Identity?.Name&background=0D6EFD&color=fff"
                 class="rounded-circle" width="36" />
        </button>

        <ul class="dropdown-menu dropdown-menu-end shadow rounded-4">
            <li>
                <a class="dropdown-item" asp-controller="Profile" asp-action="Index">
                    <i class="bi bi-person me-2"></i>Profile
                </a>
            </li>
            <li><hr class="dropdown-divider" /></li>
            <li>
                <form asp-controller="Account" asp-action="Logout" method="post">
                    <button class="dropdown-item text-danger">
                        <i class="bi bi-box-arrow-right me-2"></i>Logout
                    </button>
                </form>
            </li>
        </ul>
    </div>
</div>

<!-- ================= FILTER BAR ================= -->
<form asp-action="Index" method="get" class="row g-2 align-items-end mb-4">

    <div class="col-md-4">
        <label class="form-label small fw-semibold">Search</label>
        <input type="text" name="q" value="@q" class="form-control"
               placeholder="Search tasks..." />
    </div>

    <div class="col-md-3">
        <label class="form-label small fw-semibold">State</label>
        <select name="state" class="form-select">
            <option value="">All</option>
            @foreach (State s in Enum.GetValues(typeof(State)))
            {
            <option value="@s" selected="@(state == s)">@s</option>
            }
        </select>
    </div>

    <div class="col-md-3">
        <label class="form-label small fw-semibold">Date</label>
        <select name="range" class="form-select">
            <option value="">All</option>
            <option value="today">Today</option>
            <option value="week">This week</option>
        </select>
    </div>

    <div class="col-md-2 d-flex gap-2">
        <button class="btn btn-primary w-100">
            <i class="bi bi-filter"></i>
        </button>
        <a asp-action="Create" class="btn btn-success w-100">
            <i class="bi bi-plus-lg"></i>
        </a>
    </div>
</form>

<!-- ================= TASK LIST ================= -->
<div class="d-flex flex-column gap-3">

    @foreach (var task in Model.taskItem)
    {
    <div class="card border-0 shadow-sm rounded-4">
        <div class="card-body">
            <div class="row align-items-center">

                <div class="col-md-4">
                    <div class="fw-bold">@task.Title</div>
                    <div class="text-muted small">#TF-@task.Id.ToString("D4")</div>
                </div>

                <div class="col-md-2 text-center">
                    @{
                    var badge = task.State switch
                    {
                    State.Completed   => "bg-success",
                    State.Canceled    => "bg-danger",
                    State.Interrupted => "bg-warning text-dark",
                    State.Ongoing     => "bg-primary",
                    _                 => "bg-secondary"
                    };
                    }
                    <span class="badge @badge px-3 py-2 rounded-pill">
                        @task.State
                    </span>
                </div>

                <div class="col-md-3 text-center text-muted small">
                    @task.StartDate.ToShortDateString()
                    —
                    @task.EndDate.ToShortDateString()
                </div>

                <div class="col-md-3 text-end d-flex gap-2 justify-content-end">

                    @if (task.State == State.NotAssigned)
                    {
                    <button class="btn btn-outline-primary btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#assignModal-@task.Id">
                        Start
                    </button>
                    }
                    else if (task.State == State.Ongoing)
                    {
                    <form asp-action="ChangeState" method="post">
                        <input type="hidden" name="id" value="@task.Id" />
                        <input type="hidden" name="newState" value="Interrupted" />
                        <button class="btn btn-outline-warning btn-sm">
                            <i class="bi bi-pause-fill"></i>
                        </button>
                    </form>

                    <form asp-action="ChangeState" method="post">
                        <input type="hidden" name="id" value="@task.Id" />
                        <input type="hidden" name="newState" value="Completed" />
                        <button class="btn btn-success btn-sm">
                            Complete
                        </button>
                    </form>
                    }
                    else if (task.State == State.Interrupted)
                    {
                    <form asp-action="ChangeState" method="post">
                        <input type="hidden" name="id" value="@task.Id" />
                        <input type="hidden" name="newState" value="Ongoing" />
                        <button class="btn btn-outline-primary btn-sm">
                            <i class="bi bi-play-fill"></i>
                        </button>
                    </form>

                    <form asp-action="ChangeState" method="post">
                        <input type="hidden" name="id" value="@task.Id" />
                        <input type="hidden" name="newState" value="Canceled" />
                        <button class="btn btn-outline-danger btn-sm">
                            <i class="bi bi-x-lg"></i>
                        </button>
                    </form>
                    }

                    <button class="btn btn-outline-secondary btn-sm"
                            data-bs-toggle="modal"
                            data-bs-target="#infoModal-@task.Id">
                        <i class="bi bi-info-circle"></i>
                    </button>
                </div>
            </div>
        </div>
    </div>

    <!-- INFO MODAL -->
    <div class="modal fade" id="infoModal-@task.Id" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-4">
                <div class="modal-header">
                    <h5 class="fw-bold">@task.Title</h5>
                    <button class="btn-close" data-bs-dismiss="modal"></button>
                </div>
                <div class="modal-body">
                    <p>@task.Description</p>
                </div>
            </div>
        </div>
    </div>

    <!-- ASSIGN MODAL -->
    <div class="modal fade" id="assignModal-@task.Id" tabindex="-1">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content rounded-4">
                <form asp-action="AssignAndStart" method="post">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="taskId" value="@task.Id" />

                    <div class="modal-header">
                        <h5 class="fw-bold">Assign Task</h5>
                        <button class="btn-close" data-bs-dismiss="modal"></button>
                    </div>

                    <div class="modal-body">
                        <select name="assignedToId" class="form-select" required>
                            <option value="">Select user</option>
                            @foreach (var user in Model.users ?? Enumerable.Empty<ApplicationUser>())
                            {
                            <option value="@user.Id">@user.UserName</option>
                            }
                        </select>
                    </div>

                    <div class="modal-footer">
                        <button class="btn btn-light" data-bs-dismiss="modal">Cancel</button>
                        <button class="btn btn-primary fw-bold">Assign & Start</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
    }
</div>

<!-- ================= PAGINATION ================= -->
@if (totalPages > 1)
{
<nav class="mt-4">
    <ul class="pagination justify-content-center">

        @for (int i = 1; i <= totalPages; i++)
        {
        <li class="page-item @(i == currentPage ? "active" : "")">
            <a class="page-link"
               asp-action="Index"
               asp-route-page="@i"
               asp-route-q="@q"
               asp-route-state="@state">
                @i
            </a>
        </li>
        }

    </ul>
</nav>
}
