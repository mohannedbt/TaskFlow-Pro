@model TaskFlow_Pro.Models.TaskViewModel
@using TaskFlow_Pro.Models

@{
ViewData["Title"] = "Tasks";
int currentPage = ViewBag.CurrentPage ?? 1;
int totalPages  = ViewBag.TotalPages ?? 1;
string action = ViewContext.RouteData.Values["action"]!.ToString()!;
var isOwner = User.IsInRole("Owner");
var isAdmin = User.IsInRole("Admin");
var canCreateTask = isOwner || isAdmin;
var canAssignTeam = isOwner || isAdmin;
}

<style>
    /* Use variables for dynamic themes */
    .nav-pills .nav-link {
        color: var(--text-muted);
        font-weight: 600;
        padding: 10px 20px;
        border-radius: 12px;
        transition: all 0.3s;
    }
    .nav-pills .nav-link.active {
        background-color: var(--accent-primary);
        color: #fff !important;
        box-shadow: 0 4px 12px rgba(13, 110, 253, 0.2);
    }

    .filter-card {
        background: var(--card-bg);
        border-radius: 20px;
        border: 1px solid var(--sidebar-border);
        box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.05);
    }

    .form-label-tiny {
        font-size: 0.65rem;
        font-weight: 800;
        text-transform: uppercase;
        letter-spacing: 0.05em;
        color: var(--text-muted);
    }

    .task-row {
        background: var(--card-bg);
        border: 1px solid var(--sidebar-border);
        border-radius: 16px;
        transition: all 0.2s ease;
    }
    .task-row:hover {
        border-color: var(--accent-primary);
        transform: translateY(-2px);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    /* Badge Overrides */
    .badge-soft-secondary {
        background: var(--nav-hover);
        color: var(--text-main);
    }

    /* Dark Mode specific input fixes */
    [data-theme="Dark"] .form-control,
    [data-theme="Dark"] .form-select,
    [data-theme="Dark"] .input-group-text {
        background-color: rgba(255,255,255,0.05) !important;
        border: none !important;
        color: var(--text-main);
    }

    .bg-primary-soft { background: rgba(13, 110, 253, 0.12); }
    .x-small { font-size: 0.72rem; }

    /* Ensure title respects theme */
    .text-title { color: var(--text-main); font-weight: 800; }
</style>

<div class="d-flex justify-content-between align-items-center mb-5">
    <div>
        <h3 class="fw-bold mb-0 text-title" style="letter-spacing: -0.02em;">
            TaskFlow <span class="text-primary">Pro</span>
        </h3>
        <p class="text-muted small mb-0">Workspace / @action</p>
    </div>

    <div class="dropdown">
        <button class="btn d-flex align-items-center gap-3 border shadow-sm rounded-pill px-3 py-2 transition-hover"
                type="button" data-bs-toggle="dropdown" aria-expanded="false"
                style="border-color: var(--sidebar-border) !important; background: var(--card-bg);">
            <div class="text-end d-none d-sm-block">
                <div class="fw-bold small leading-tight" style="color: var(--text-main)">@User.Identity?.Name</div>
                <div class="text-success fw-medium" style="font-size: 0.65rem;">
                    <i class="bi bi-circle-fill me-1" style="font-size: 0.5rem;"></i> Active Now
                </div>
            </div>
            <div class="position-relative">
                <img src="https://ui-avatars.com/api/?name=@User.Identity?.Name&background=0D6EFD&color=fff"
                     class="rounded-circle border border-2 shadow-sm" style="border-color: var(--card-bg) !important;"
                     width="36" height="36" alt="Profile" />
                <span class="position-absolute bottom-0 end-0 bg-success border border-white rounded-circle"
                      style="width: 10px; height: 10px; border-width: 2px !important;"></span>
            </div>
        </button>

        <ul class="dropdown-menu dropdown-menu-end border-0 shadow-lg rounded-4 mt-2 p-2 animate__animated animate__fadeIn animate__faster"
            style="min-width: 200px; background: var(--bg-sidebar);">
            <li class="px-3 py-2 mb-1">
                <span class="text-uppercase text-muted fw-bold" style="font-size: 0.6rem; letter-spacing: 0.05em;">Account</span>
            </li>
            <li>
                <a class="dropdown-item rounded-3 py-2 small d-flex align-items-center" asp-controller="Profile" asp-action="Index" style="color: var(--text-main)">
                    <i class="bi bi-person-gear fs-5 me-2 text-primary"></i>
                    <div>
                        <span class="d-block fw-bold">My Profile</span>
                        <span class="text-muted" style="font-size: 0.7rem;">Settings</span>
                    </div>
                </a>
            </li>
            <li><hr class="dropdown-divider opacity-10"></li>
            <li>
                <form asp-controller="Account" asp-action="Logout" method="post">
                    @Html.AntiForgeryToken()
                    <button type="submit" class="dropdown-item rounded-3 py-2 small text-danger d-flex align-items-center fw-bold">
                        <i class="bi bi-box-arrow-right fs-5 me-2"></i> Sign Out
                    </button>
                </form>
            </li>
        </ul>
    </div>
</div>

<div class="row g-3 mb-4">
    <div class="col-md-4">
        <div class="card p-3 border-0 rounded-4 shadow-sm d-flex flex-row align-items-center gap-3" style="background: var(--card-bg);">
            <div class="bg-primary-soft text-primary rounded-3 p-2">
                <i class="bi bi-list-task fs-4"></i>
            </div>
            <div>
                <span class="text-muted small d-block">Load Capacity</span>
                <span class="fw-bold h5 mb-0" style="color: var(--text-main)">@Model.TaskItems?.Count Tasks</span>
            </div>
        </div>
    </div>
</div>

<div class="d-flex justify-content-between align-items-center mb-4">
    <ul class="nav nav-pills gap-2">
        @if (canCreateTask)
        {
        <li class="nav-item">
            <a class="nav-link @(action=="MyCreatedTasks" ? "active" : "")" asp-action="MyCreatedTasks">Created</a>
        </li>
        }
        <li class="nav-item">
            <a class="nav-link @(action=="MyToDo" ? "active" : "")" asp-action="MyToDo">To-Do List</a>
        </li>
    </ul>

    @if (canCreateTask)
    {
    <a asp-action="Create" class="btn btn-primary rounded-3 px-3 shadow-sm fw-bold">
        <i class="bi bi-plus-lg me-1"></i> New Task
    </a>
    }
</div>

<div class="card filter-card mb-4">
    <div class="card-body p-4">
        <form asp-action="@action" method="get">
            <div class="row g-3 align-items-end">
                <div class="col-lg-3">
                    <label class="form-label-tiny mb-1 d-block">Search</label>
                    <div class="input-group">
                        <span class="input-group-text border-0"><i class="bi bi-search"></i></span>
                        <input name="Q" value="@Model.Filters.Q" class="form-control" placeholder="Task name..." />
                    </div>
                </div>

                <div class="col-lg-2">
                    <label class="form-label-tiny mb-1 d-block">State</label>
                    <select name="State" class="form-select">
                        <option value="">All</option>
                        @foreach (State s in Enum.GetValues(typeof(State)))
                        {
                        <option value="@s" selected="@(Model.Filters.State == s)">@s</option>
                        }
                    </select>
                </div>

                <div class="col-lg-2">
                    <label class="form-label-tiny mb-1 d-block">Timeline</label>
                    <select name="Range" id="rangeSelect" class="form-select">
                        <option value="">Any Time</option>
                        <option value="today" selected="@(Model.Filters.Range=="today")">Today</option>
                        <option value="week" selected="@(Model.Filters.Range=="week")">This Week</option>
                        <option value="custom" selected="@(Model.Filters.Range=="custom")">Custom</option>
                    </select>
                </div>

                <div class="col text-end">
                    <button type="submit" class="btn btn-primary px-4 rounded-3 fw-bold">Apply</button>
                    <a asp-action="@action" class="btn btn-outline-secondary ms-1 rounded-3">
                        <i class="bi bi-arrow-counterclockwise"></i>
                    </a>
                </div>
            </div>
        </form>
    </div>
</div>

<div class="task-container d-flex flex-column gap-2">
    @foreach (var task in Model.TaskItems ?? new List<TaskItem>())
    {
    var myState = (Model.MyStates != null && Model.MyStates.ContainsKey(task.Id)) ? Model.MyStates[task.Id] : null;

    <div class="task-row p-3">
        <div class="row align-items-center">
            <div class="col-md-5 d-flex align-items-center gap-3">
                <input type="checkbox" class="form-check-input mt-0" />
                <div>
                    <span class="fw-bold d-block" style="color: var(--text-main)">@task.Title</span>
                    <span class="text-muted x-small">Ends @task.EndDate.ToString("MMM dd, yyyy")</span>
                </div>
            </div>

            <div class="col-md-2 text-center">
                <span class="badge-soft badge-soft-secondary">@task.State</span>
            </div>

            <div class="col-md-5 d-flex justify-content-end align-items-center gap-2">
                @if (task.State == State.NotAssigned && action == "MyCreatedTasks" && canAssignTeam)
                {
                <form asp-action="AssignToTeam" method="post" class="d-flex gap-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="taskId" value="@task.Id" />
                    <select name="teamId" class="form-select form-select-sm" style="width: 140px;" required>
                        <option value="">Select Team</option>
                        @foreach (var team in Model.Teams ?? new List<Team>()) {
                        <option value="@team.Id">@team.Name</option>
                        }
                    </select>
                    <button class="btn btn-primary btn-sm rounded-2 fw-bold">Deploy</button>
                </form>
                }
                else
                {
                <form asp-action="SetMyState" method="post" class="d-inline-flex gap-2">
                    @Html.AntiForgeryToken()
                    <input type="hidden" name="taskId" value="@task.Id" />
                    @if (!myState.HasValue || myState.Value == State.Ongoing) {
                    <button type="submit" name="newState" value="@State.Completed" class="btn btn-success btn-sm px-3 rounded-2 fw-bold">Done</button>
                    } else {
                    <button type="submit" name="newState" value="@State.Ongoing" class="btn btn-outline-primary btn-sm px-3 rounded-2 fw-bold">Resume</button>
                    }
                </form>
                }
            </div>
        </div>
    </div>
    }
</div>

@section Scripts {
<script>
    // Fix for dynamic date fields
    document.getElementById('rangeSelect')?.addEventListener('change', function() {
        // Add custom logic if needed
    });
</script>
}