@{
    ViewData["Title"] = "Access Denied";
    Layout = "_Layout"; // or _Layout_Empty if you want no sidebar
}

<div class="d-flex align-items-center justify-content-center" style="min-height: 70vh;">
    <div class="text-center col-md-6">

        <div class="mb-4">
            <i class="bi bi-shield-lock text-danger" style="font-size: 4rem;"></i>
        </div>

        <h2 class="fw-bold mb-2">Access Denied</h2>
        <p class="text-muted mb-4">
            You don’t have permission to access this page.
        </p>

        <div class="d-flex justify-content-center gap-3">
            <a asp-controller="Task" asp-action="Index"
               class="btn btn-primary rounded-3 px-4 fw-semibold">
                <i class="bi bi-house-door me-1"></i> Dashboard
            </a>

            <a asp-controller="Profile" asp-action="Index"
               class="btn btn-outline-secondary rounded-3 px-4 fw-semibold">
                <i class="bi bi-person me-1"></i> My Profile
            </a>
        </div>

        <div class="mt-4 small text-muted">
            If you believe this is a mistake, contact your team leader or administrator.
        </div>

    </div>
</div>