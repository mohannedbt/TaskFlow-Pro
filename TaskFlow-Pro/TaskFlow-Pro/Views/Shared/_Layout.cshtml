<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskFlow Pro</title>

    <!-- Fonts & Icons -->
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">

    <!-- Bootstrap -->
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />

    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f4f7f9;
            color: #2d3436;
        }

        /* ===== SIDEBAR ===== */
        .sidebar {
            background: #ffffff;
            border-right: 1px solid #e9ecef;
            min-height: 100vh;
            position: fixed;
            width: 260px;
            padding-top: 1.5rem;
        }

        .brand-area {
            padding: 0 1.5rem 2rem;
            font-weight: 700;
            font-size: 1.25rem;
            color: #0d6efd;
            display: flex;
            align-items: center;
        }

        .brand-icon {
            width: 32px;
            height: 32px;
            background: #0d6efd;
            border-radius: 8px;
            margin-right: 10px;
        }

        .nav-link {
            color: #636e72;
            font-weight: 500;
            padding: 0.8rem 1.5rem;
            border-radius: 10px;
            margin: 0.2rem 1rem;
            transition: all 0.2s;
        }

        .nav-link.active,
        .nav-link:hover {
            background-color: #f0f3ff;
            color: #0d6efd;
        }

        .nav-link i {
            margin-right: 10px;
            font-size: 1.1rem;
        }

        /* ===== MAIN CONTENT ===== */
        .main-content {
            margin-left: 260px;
            padding: 2rem;
        }

        /* ===== TOP BAR ===== */
        .topbar {
            display: flex;
            justify-content: space-between;
            align-items: center;
            margin-bottom: 2rem;
        }

        /* ===== MOBILE ===== */
        @@media (max-width: 992px) {
            .sidebar {
                display: none;
            }

            .main-content {
                margin-left: 0;
            }
        }
    </style>
</head>

<body>

@if (User.Identity?.IsAuthenticated == true)
{
    <!-- ===== SIDEBAR ===== -->
    <aside class="sidebar d-none d-lg-block">
        <div class="brand-area">
            <span class="brand-icon"></span>
            TaskFlow Pro
        </div>

        <nav class="nav flex-column">

            <!-- Task Manager -->
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Task" ? "active" : "")"
               asp-controller="Task" asp-action="MyTasks">
                <i class="bi bi-check2-square"></i> TaskManager
            </a>

            <!-- Calendar -->
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Calendar" ? "active" : "")"
               asp-controller="Schedule" asp-action="Index">
                <i class="bi bi-calendar-week"></i> Calendar
            </a>

            @{
                var isOwner = User.IsInRole("Owner");
                var isAdmin = User.IsInRole("Admin");
                var canManageWorkspace = isOwner || isAdmin;
            }

            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Team" ? "active" : "")"
               asp-controller="Team" asp-action="Index">
                <i class="bi bi-people"></i> Team
            </a>

            @if (canManageWorkspace)
            {
                <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Workspace" ? "active" : "")"
                   asp-controller="Workspace" asp-action="Index">
                    <i class="bi bi-building"></i> Workspace Management
                </a>
            }


            <hr class="mx-4 my-3 text-muted">

            <!-- Settings -->
            <a class="nav-link @(ViewContext.RouteData.Values["Controller"]?.ToString() == "Settings" ? "active" : "")"
               asp-controller="Settings" asp-action="Index">
                <i class="bi bi-gear"></i> Settings
            </a>

        </nav>

    </aside>
}

<!-- ===== MAIN ===== -->
<main class="main-content">

    @RenderBody()
</main>

<!-- Scripts -->
<script src="~/lib/jquery/dist/jquery.min.js"></script>
<script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
<script src="~/js/site.js" asp-append-version="true"></script>

@await RenderSectionAsync("Scripts", required: false)

</body>
</html>
