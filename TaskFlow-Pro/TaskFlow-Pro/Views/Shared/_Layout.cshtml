<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - TaskFlow Pro</title>
    
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@300;400;500;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.0/font/bootstrap-icons.css">
    
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f4f7f9;
            color: #2d3436;
        }

        /* Modern Sidebar */
        .sidebar {
            background: #ffffff;
            border-right: 1px solid #e9ecef;
            min-height: 100vh;
            position: fixed;
            width: 260px;
            padding-top: 1.5rem;
        }

        .main-content {
            margin-left: 260px; /* Offset for sidebar */
            padding: 2rem;
        }

        .nav-link {
            color: #636e72;
            font-weight: 500;
            padding: 0.8rem 1.5rem;
            border-radius: 10px;
            margin: 0.2rem 1rem;
            transition: all 0.2s;
        }

        .nav-link:hover, .nav-link.active {
            background-color: #f0f3ff;
            color: #0d6efd;
        }

        .nav-link i {
            margin-right: 10px;
            font-size: 1.1rem;
        }

        /* Top Navbar Branding */
        .brand-area {
            padding: 0 1.5rem 2rem;
            font-weight: 700;
            font-size: 1.25rem;
            color: #0d6efd;
            display: flex;
            align-items: center;
        }

        .brand-icon {
            width: 32px;
            height: 32px;
            background: #0d6efd;
            border-radius: 8px;
            margin-right: 10px;
            display: inline-block;
        }

        /* Mobile Responsiveness */
        @@media (max-width: 992px) {
            .sidebar { display: none; }
            .main-content { margin-left: 0; }
        }
    </style>
</head>
<body>

    <aside class="sidebar d-none d-lg-block">
        <div class="brand-area">
            <span class="brand-icon"></span>
            TaskFlow Pro
        </div>
        
        <nav class="nav flex-column">
            <a class="nav-link @(ViewContext.RouteData.Values["Action"]?.ToString() == "Index" ? "active" : "")" 
               asp-controller="Tasks" asp-action="Index">
                <i class="bi bi-grid-1x2"></i> Dashboard
            </a>
            <a class="nav-link" href="#">
                <i class="bi bi-calendar-check"></i> Schedule
            </a>
            <a class="nav-link" href="#">
                <i class="bi bi-people"></i> Team
            </a>
            <hr class="mx-4 my-3 text-muted">
            <a class="nav-link" href="#">
                <i class="bi bi-gear"></i> Settings
            </a>
        </nav>
    </aside>

    <main class="main-content">
        <div class="d-flex justify-content-between align-items-center mb-4 d-lg-flex d-none">
            <div class="d-flex align-items-center">
                <span class="me-3 fw-medium">Hello, User!</span>
                <img src="https://ui-avatars.com/api/?name=User&background=0D6EFD&color=fff" class="rounded-circle shadow-sm" width="40" alt="Avatar">
            </div>
        </div>

        @RenderBody()
    </main>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>