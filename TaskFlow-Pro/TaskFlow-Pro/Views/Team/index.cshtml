@model TaskFlow_Pro.Models.TeamHubViewModel
@{
ViewData["Title"] = "Team";
}

<div class="d-flex justify-content-between align-items-center mb-4">
    <div>
        <h3 class="fw-bold mb-1">Team Hub</h3>
        <p class="text-muted small mb-0">Join a team and collaborate inside your workspace.</p>
    </div>
</div>

@if (TempData["Success"] != null || TempData["Error"] != null)
{
<div class="alert @(TempData["Success"] != null ? "alert-success" : "alert-danger") border-0 rounded-4">
    @(TempData["Success"] ?? TempData["Error"])
</div>
}

<div class="row g-4">
    <div class="col-lg-4">
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-header bg-white border-0 pt-4 px-4">
                <h5 class="fw-bold m-0">My Team</h5>
            </div>
            <div class="card-body px-4 pb-4">
                @if (Model.MyTeamId == null)
                {
                <div class="text-muted small">You’re not in a team yet.</div>
                <div class="mt-3 small text-muted">Pick one from the list.</div>
                }
                else
                {
                <div class="fw-bold">@Model.MyTeamName</div>
                <div class="text-muted small mb-2">@Model.MyTeamDescription</div>
                <div class="small">
                    <span class="text-muted">Leader:</span>
                    <span class="fw-semibold">@Model.MyTeamLeaderName</span>
                </div>

                <form asp-action="Leave" method="post" class="mt-3">
                    @Html.AntiForgeryToken()
                    <button class="btn btn-outline-danger w-100 fw-bold rounded-3">
                        <i class="bi bi-box-arrow-left me-1"></i> Leave Team
                    </button>
                </form>
                }
            </div>
        </div>
    </div>

    <div class="col-lg-8">
        <div class="card border-0 shadow-sm rounded-4">
            <div class="card-header bg-white border-0 pt-4 px-4">
                <h5 class="fw-bold m-0">Available Teams</h5>
            </div>

            <div class="card-body p-4">
                <div class="row g-3">
                    @foreach (var t in Model.Teams)
                    {
                    <div class="col-md-6">
                        <div class="border rounded-4 p-3 h-100">
                            <div class="d-flex justify-content-between align-items-start">
                                <div>
                                    <div class="fw-bold">@t.Name</div>
                                    <div class="text-muted small">@t.Description</div>
                                </div>
                                <span class="badge bg-light text-muted rounded-pill">@t.MembersCount members</span>
                            </div>

                            <div class="mt-3">
                                @if (t.IsMine)
                                {
                                <span class="badge bg-primary rounded-pill">Your team</span>
                                }
                                else if (Model.MyTeamId != null)
                                {
                                <button class="btn btn-light w-100 rounded-3" disabled>
                                    Already in a team
                                </button>
                                }
                                else
                                {
                                <form asp-action="Join" method="post">
                                    @Html.AntiForgeryToken()
                                    <input type="hidden" name="teamId" value="@t.TeamId" />
                                    <button class="btn btn-primary w-100 fw-bold rounded-3">
                                        <i class="bi bi-plus-lg me-1"></i> Join
                                    </button>
                                </form>
                                }
                            </div>
                        </div>
                    </div>
                    }
                </div>

                @if (!Model.Teams.Any())
                {
                <div class="text-muted small">No teams created yet.</div>
                }
            </div>
        </div>
    </div>
</div>
