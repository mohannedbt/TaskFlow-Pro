@model TaskFlow_Pro.Models.TeamHubViewModel
@{
    ViewData["Title"] = "Team";
}

<style>
    /* Section-specific styling */
    .hub-container {
        color: var(--text-main);
    }

    .hub-card {
        background: var(--card-bg);
        border: 1px solid var(--sidebar-border);
        transition: transform 0.2s ease;
    }

    .team-item-card {
        background: var(--nav-hover); /* Light grey in light mode, deep slate in dark */
        border: 1px solid var(--sidebar-border);
        transition: all 0.2s ease;
    }

    .team-item-card:hover {
        border-color: var(--accent-primary);
        background: var(--card-bg);
        box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
    }

    .badge-member-count {
        background: var(--bg-body) !important;
        color: var(--text-muted) !important;
        border: 1px solid var(--sidebar-border);
    }

    /* Override for disabled buttons in dark mode */
    [data-theme="Dark"] .btn-light:disabled {
        background-color: rgba(255,255,255,0.05) !important;
        color: rgba(255,255,255,0.2) !important;
        border: 1px solid rgba(255,255,255,0.05);
    }
</style>

<div class="hub-container">
    <div class="d-flex justify-content-between align-items-center mb-5">
        <div>
            <h3 class="fw-bold mb-1" style="letter-spacing: -0.02em;">Team Hub</h3>
            <p class="text-muted small mb-0">Join a team and collaborate inside your workspace.</p>
        </div>
        <i class="bi bi-people text-primary fs-2 opacity-50"></i>
    </div>

    @if (TempData["Success"] != null || TempData["Error"] != null)
    {
        <div class="alert @(TempData["Success"] != null ? "alert-success" : "alert-danger") border-0 rounded-4 shadow-sm mb-4 animate__animated animate__fadeInDown">
            <i class="bi @(TempData["Success"] != null ? "bi-check-circle" : "bi-exclamation-octagon") me-2"></i>
            @(TempData["Success"] ?? TempData["Error"])
        </div>
    }

    <div class="row g-4">
        <div class="col-lg-4">
            <div class="card hub-card border-0 rounded-4 shadow-sm h-100">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h5 class="fw-bold m-0" style="color: var(--text-main)">My Team</h5>
                </div>
                <div class="card-body px-4 pb-4">
                    @if (Model.MyTeamId == null)
                    {
                        <div class="text-center py-4">
                            <div class="display-6 text-muted opacity-25 mb-3"><i class="bi bi-person-slash"></i></div>
                            <p class="text-muted small">You’re not in a team yet. Pick an available squad to get started.</p>
                        </div>
                    }
                    else
                    {
                        <div class="p-3 rounded-4 mb-3" style="background: var(--nav-hover);">
                            <div class="fw-bold h5 mb-1 text-primary">@Model.MyTeamName</div>
                            <div class="text-muted small mb-3">@Model.MyTeamDescription</div>
                            <hr class="opacity-10">
                            <div class="small d-flex justify-content-between">
                                <span class="text-muted">Lead:</span>
                                <span class="fw-semibold">@Model.MyTeamLeaderName</span>
                            </div>
                        </div>

                        <form asp-action="Leave" method="post">
                            @Html.AntiForgeryToken()
                            <button class="btn btn-outline-danger w-100 fw-bold rounded-3 py-2">
                                <i class="bi bi-box-arrow-left me-1"></i> Leave Team
                            </button>
                        </form>
                    }
                </div>
            </div>
        </div>

        <div class="col-lg-8">
            <div class="card hub-card border-0 rounded-4 shadow-sm h-100">
                <div class="card-header bg-transparent border-0 pt-4 px-4">
                    <h5 class="fw-bold m-0" style="color: var(--text-main)">Available Squads</h5>
                </div>

                <div class="card-body p-4">
                    <div class="row g-3">
                        @foreach (var t in Model.Teams)
                        {
                            <div class="col-md-6">
                                <div class="team-item-card rounded-4 p-4 d-flex flex-column justify-content-between h-100">
                                    <div>
                                        <div class="d-flex justify-content-between align-items-start mb-2">
                                            <div class="fw-bold h6 m-0" style="color: var(--text-main)">@t.Name</div>
                                            <span class="badge badge-member-count rounded-pill px-2 py-1">
                                                @t.MembersCount <i class="bi bi-person ms-1"></i>
                                            </span>
                                        </div>
                                        <p class="text-muted small mb-4">@t.Description</p>
                                    </div>

                                    <div class="mt-auto">
                                        @if (t.IsMine)
                                        {
                                            <div class="btn btn-primary w-100 rounded-3 fw-bold shadow-sm" style="pointer-events: none;">
                                                <i class="bi bi-check2-circle me-1"></i> Current Team
                                            </div>
                                        }
                                        else if (Model.MyTeamId != null)
                                        {
                                            <button class="btn btn-light w-100 rounded-3 border-0 opacity-50" disabled>
                                                Already Enrolled
                                            </button>
                                        }
                                        else
                                        {
                                            <form asp-action="Join" method="post">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="teamId" value="@t.TeamId" />
                                                <button class="btn btn-primary w-100 fw-bold rounded-3 py-2 shadow-sm transition-hover">
                                                    Join Squad <i class="bi bi-chevron-right ms-1 small"></i>
                                                </button>
                                            </form>
                                        }
                                    </div>
                                </div>
                            </div>
                        }
                    </div>

                    @if (!Model.Teams.Any())
                    {
                        <div class="text-center py-5">
                            <i class="bi bi-building-dash text-muted display-4 opacity-25"></i>
                            <p class="text-muted mt-3">No teams created yet. Contact an administrator to form a squad.</p>
                        </div>
                    }
                </div>
            </div>
        </div>
    </div>
</div>