@model IEnumerable<TaskFlow_Pro.Models.Team>

@{
    ViewData["Title"] = "Teams";
}

<h3 class="fw-bold mb-3">Teams</h3>

@if (TempData["Error"] != null)
{
    <div class="alert alert-danger">@TempData["Error"]</div>
}

<!-- CREATE TEAM -->
<div class="card mb-4 shadow-sm">
    <div class="card-body">
        <form asp-action="Create" method="post">
            @Html.AntiForgeryToken()

            <div class="row g-2">
                <div class="col-md-4">
                    <input name="name" class="form-control" placeholder="Team name" required />
                </div>
                <div class="col-md-6">
                    <input name="description" class="form-control" placeholder="Description (optional)" />
                </div>
                <div class="col-md-2">
                    <button class="btn btn-primary w-100 fw-bold">Create</button>
                </div>
            </div>
        </form>
    </div>
</div>

<!-- TEAM LIST -->
<div class="row g-3">
    @foreach (var team in Model)
    {
        <div class="col-md-4">
            <div class="card shadow-sm h-100">
                <div class="card-body">
                    <h5 class="fw-bold">@team.Name</h5>
                    <p class="text-muted small">@team.Description</p>

                    <div class="small text-muted mb-2">
                        Members: @team.Members.Count
                    </div>

                    <form asp-action="Join" method="post">
                        @Html.AntiForgeryToken()
                        <input type="hidden" name="teamId" value="@team.Id" />
                        <button class="btn btn-outline-primary btn-sm w-100">
                            Join Team
                        </button>
                    </form>
                </div>
            </div>
        </div>
    }
</div>