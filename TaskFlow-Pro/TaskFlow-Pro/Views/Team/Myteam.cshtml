@model TaskFlow_Pro.Models.Team?

@{
    ViewData["Title"] = "My Team";
}

<h3 class="fw-bold mb-3">My Team</h3>

@if (Model == null)
{
    <div class="alert alert-info">
        You are not part of any team yet.
        <a asp-action="Index" class="fw-bold">Browse teams</a>
    </div>
    return;
}

<div class="card shadow-lg">
    <div class="card-body">

        <h4 class="fw-bold">@Model.Name</h4>
        <p class="text-muted">@Model.Description</p>

        <hr />

        <h6 class="fw-bold">Members</h6>

        <ul class="list-group mb-3">
            @foreach (var member in Model.Members)
            {
                <li class="list-group-item d-flex justify-content-between align-items-center">
                    <div>
                        @member.UserName
                        @if (member.Id == Model.LeaderId)
                        {
                            <span class="badge bg-primary ms-2">Leader</span>
                        }
                    </div>

                    @if (User.Identity?.Name == Model.Leader?.UserName && member.Id != Model.LeaderId)
                    {
                        <form asp-action="RemoveMember" method="post" class="d-inline">
                            @Html.AntiForgeryToken()
                            <input type="hidden" name="teamId" value="@Model.Id" />
                            <input type="hidden" name="memberId" value="@member.Id" />
                            <button class="btn btn-sm btn-outline-danger">Remove</button>
                        </form>
                    }
                </li>
            }
        </ul>

        <form asp-action="Leave" method="post">
            @Html.AntiForgeryToken()
            <button class="btn btn-outline-secondary">
                Leave Team
            </button>
        </form>

    </div>
</div>