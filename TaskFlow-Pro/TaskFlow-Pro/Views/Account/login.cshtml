@model LoginViewModel
@{
    ViewData["Title"] = "Sign In";
    Layout = "_Layout_Empty"; 
}

<div class="min-vh-100 d-flex align-items-center justify-content-center" style="background-color: #f8fafc;">
    <div class="col-11 col-sm-9 col-md-7 col-lg-5 col-xl-4">
        
        <div class="text-center mb-4">
            <div class="d-inline-flex align-items-center justify-content-center mb-3" 
                 style="width: 48px; height: 48px; background: #0d6efd; border-radius: 12px; color: white; box-shadow: 0 4px 12px rgba(13, 110, 253, 0.2);">
                <i class="bi bi-layers-half fs-4"></i>
            </div>
            <h3 class="fw-bold" style="color: #0f172a;">TaskFlow Pro</h3>
            <p class="text-muted small">The modern standard for team productivity</p>
        </div>

        <div class="card border-0 shadow-lg p-2" style="border-radius: 24px;">
            <div class="card-body p-4 p-md-5">
                
                <div class="mb-4">
                    <h5 class="fw-bold m-0" style="color: #0f172a;">Welcome back</h5>
                    <p class="text-muted small">Please enter your credentials to continue</p>
                </div>

                <form asp-action="Login" method="post" id="loginForm">
                    @Html.AntiForgeryToken()

                    <div asp-validation-summary="ModelOnly" class="text-danger small mb-3"></div>

                    <div class="mb-3">
                        <label asp-for="Email" class="form-label small fw-bold text-uppercase" style="color: #475569; font-size: 0.65rem; letter-spacing: 0.08em;"></label>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0" style="border-radius: 10px 0 0 10px;">
                                <i class="bi bi-envelope text-muted"></i>
                            </span>
                            <input asp-for="Email" class="form-control border-0 bg-light py-2" placeholder="name@company.com" style="border-radius: 0 10px 10px 0;" />
                        </div>
                        <span asp-validation-for="Email" class="text-danger x-small"></span>
                    </div>

                    <div class="mb-3">
                        <div class="d-flex justify-content-between">
                            <label asp-for="Password" class="form-label small fw-bold text-uppercase" style="color: #475569; font-size: 0.65rem; letter-spacing: 0.08em;"></label>
                            <a href="#" class="small text-decoration-none fw-semibold mb-1" style="color: #0d6efd; font-size: 0.75rem;">Forgot?</a>
                        </div>
                        <div class="input-group">
                            <span class="input-group-text bg-light border-0" style="border-radius: 10px 0 0 10px;">
                                <i class="bi bi-shield-lock text-muted"></i>
                            </span>
                            <input asp-for="Password" type="password" class="form-control border-0 bg-light py-2" placeholder="••••••••" style="border-radius: 0 10px 10px 0;" />
                        </div>
                        <span asp-validation-for="Password" class="text-danger x-small"></span>
                    </div>

                    <div class="d-flex align-items-center justify-content-between mb-4">
                        <div class="form-check mb-0">
                            <input asp-for="RememberMe" class="form-check-input" style="cursor: pointer;" />
                            <label asp-for="RememberMe" class="form-check-label small text-muted" style="cursor: pointer;">
                                Keep me signed in
                            </label>
                        </div>
                    </div>

                    <button type="submit" id="submitBtn" class="btn btn-primary w-100 py-3 fw-bold shadow-sm mb-3" 
                            style="background: #0d6efd; border: none; border-radius: 12px; transition: transform 0.2s;">
                        <span class="spinner-border spinner-border-sm d-none" role="status"></span>
                        Sign In to Dashboard
                    </button>

                    <button type="button" class="btn btn-outline-light border w-100 py-2 text-dark small fw-medium" style="border-radius: 12px;">
                        <img src="https://www.google.com/favicon.ico" width="16" class="me-2" alt="Google">
                        Sign in with Google
                    </button>
                </form>
            </div>
        </div>

        <div class="text-center mt-4">
            <p class="small text-muted">
                New to the platform? 
                <a asp-action="Register" class="fw-bold text-decoration-none border-bottom border-primary border-2 pb-1" style="color: #0d6efd;">
                    Create an account
                </a>
            </p>
        </div>

    </div>
</div>

<style>
    .x-small { font-size: 0.75rem; display: block; margin-top: 4px; }
    
    .btn-primary:hover {
        transform: translateY(-1px);
        filter: brightness(1.1);
    }
    
    .form-control:focus {
        background-color: #f1f5f9 !important; /* Slightly darker light-gray on focus */
        box-shadow: none;
    }
</style>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
    <script>
        // Cohesive Loading State
        document.getElementById('loginForm').addEventListener('submit', function() {
            if ($(this).valid()) {
                const btn = document.getElementById('submitBtn');
                btn.disabled = true;
                btn.innerHTML = '<span class="spinner-border spinner-border-sm me-2"></span>Signing in...';
            }
        });
    </script>
}